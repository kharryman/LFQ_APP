<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_mnemonics_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lfq.learnfactsquick.SecondLfqActivity"
    tools:ignore="TextFields" >

    <TextView
        android:id="@+id/prompt_edit_mnemonics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Mnemonics:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scroll_all_mnemonics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prompt_edit_mnemonics" >

        <RelativeLayout
            android:id="@+id/scroll_all_mnemonics_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/edit_mnemonics_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">"
            <TextView
                android:id="@+id/prompt_select_mnemonic_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:text="Table:"                
                android:textSize="20sp" />
            <Spinner
                android:id="@+id/select_mnemonic_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"               
                android:textSize="20sp" />
            <Button
                android:id="@+id/do_delete_mnemonic_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:text="Delete Table?"
                android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/prompt_mnemonic_title"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_mnemonics_top_layout"
                android:text="Title:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/input_mnemonic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_mnemonics_top_layout"
                android:layout_toRightOf="@+id/prompt_mnemonic_title"                
                android:background="@drawable/rounded_edittext"
                android:inputType="textMultiLine"
                android:maxLines="2" />

            <TextView
                android:id="@+id/prompt_number_mnemonic_entries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_mnemonic_title"
                android:text="Number of Entries:"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/input_number_mnemonic_entries"
                android:layout_width="75sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_mnemonic_title"
                android:layout_toRightOf="@+id/prompt_number_mnemonic_entries"                
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:maxLength="3" />

            <CheckBox
                android:id="@+id/check_insert_mnemonic_line_breaks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prompt_number_mnemonic_entries"
                android:text="Insert Line Breaks?"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/prompt_insert_mnemonic_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_insert_mnemonic_line_breaks"
                android:text="Insert What Kind of Mnemonics?:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/edit_mnemonic_choices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prompt_insert_mnemonic_type"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/check_insert_mnemonics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/check_insert_number_mnemonics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/check_insert_mnemonic_anagrams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anagram"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/check_insert_mnemonic_peglist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peglist"
                    android:textSize="12sp" />
            </RadioGroup>

            <Button
                android:id="@+id/do_begin_mnemonic_edit"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_mnemonic_choices"
                android:text="Begin Inputting?" />

            <Button
                android:id="@+id/do_get_mnemonic_entries"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_mnemonic_choices"
                android:layout_toRightOf="@+id/do_begin_mnemonic_edit"
                android:text="Get Entries" />

            <CheckBox
                android:id="@+id/check_insert_new_mnemonic_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/do_begin_mnemonic_edit"
                android:text="Insert New Table?"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/input_mnemonic_table_name"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:layout_below="@+id/do_begin_mnemonic_edit"
                android:layout_toRightOf="@+id/check_insert_new_mnemonic_table"
                android:background="@drawable/rounded_edittext_red"
                android:visibility="gone" />

            <Button
                android:id="@+id/do_begin_update_mnemonics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_insert_new_mnemonic_table"
                android:text="Begin Update"
                android:textSize="12sp" />

            <Button
                android:id="@+id/do_update_mnemonics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_insert_new_mnemonic_table"
                android:layout_toRightOf="@+id/do_begin_update_mnemonics"
                android:text="Update"
                android:textSize="12sp" />

            <Button
                android:id="@+id/do_delete_mnemonics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_insert_new_mnemonic_table"
                android:layout_toRightOf="@+id/do_update_mnemonics"
                android:text="Delete"
                android:textSize="12sp" />

            <Button
                android:id="@+id/do_insert_mnemonics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_insert_new_mnemonic_table"
                android:layout_toRightOf="@+id/do_delete_mnemonics"
                android:text="Insert an Entry"
                android:textSize="12sp" />

            <ScrollView
                android:id="@+id/scroll_edit_mnemonics_results"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/do_delete_mnemonics" >

                <TextView
                    android:id="@+id/edit_mnemonics_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </TextView>
            </ScrollView>

            <LinearLayout
                android:id="@+id/mnemonics_scroll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"                
                android:layout_below="@+id/scroll_edit_mnemonics_results"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_remove_mnemonic_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"                
                android:layout_below="@+id/mnemonics_scroll_layout"
                android:orientation="horizontal">
                <Button
                android:id="@+id/add_mnemonic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  ADD ">
                </Button>
                <Button
                android:id="@+id/remove_mnemonic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REMOVE">
                </Button>
                </LinearLayout>     
                
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>