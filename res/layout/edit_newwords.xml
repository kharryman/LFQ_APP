<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_newwords_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lfq.learnfactsquick.SecondLfqActivity"
    tools:ignore="TextFields" >

    <ScrollView
        android:id="@+id/edit_newwords_scroll_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/edit_newwords_layout_all"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/prompt_edit_newwords_layout"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prompt_edit_newwords"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:text="WELCOME!"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" >
                </TextView>

                <Button
                    android:id="@+id/edit_newwords_login"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_weight="0.25"
                    android:background="@drawable/button"
                    android:text="LOGIN"
                    android:textSize="12sp" >
                </Button>

                <Button
                    android:id="@+id/edit_newwords_logout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="0.25"
                    android:background="@drawable/button"
                    android:text="LOGOUT"
                    android:textSize="12sp" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_newwords_username_layout"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prompt_edit_newwords_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User name:"
                    android:textSize="14dp" >
                </TextView>

                <EditText
                    android:id="@+id/edit_newwords_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_red"
                    android:inputType="textMultiLine"
                    android:maxLines="1"
                    android:textSize="14dp" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_newwords_password_layout"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prompt_edit_newwords_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Password:"
                    android:textSize="14dp" >
                </TextView>

                <EditText
                    android:id="@+id/edit_newwords_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_red"
                    android:inputType="textMultiLine"
                    android:maxLines="1"
                    android:password="true"
                    android:textSize="14dp" >
                </EditText>
            </LinearLayout>

            <TextView
                android:id="@+id/edit_newwords_login_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TextView>

            <LinearLayout
                android:id="@+id/date_login_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/select_year_newwords"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12sp" >
                </Spinner>

                <Spinner
                    android:id="@+id/select_month_newwords"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:entries="@array/month_options"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12sp" >
                </Spinner>

                <Spinner
                    android:id="@+id/select_day_newwords"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:entries="@array/day_options"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12sp" >
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_newwords_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/prompt_change_date"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.2"
                    android:text="CHANGE DATE?"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/select_days_before"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/get_last_newwords"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/go_left" >
                </Button>

                <Button
                    android:id="@+id/get_next_newwords"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/go_right" >
                </Button>

                <Button
                    android:id="@+id/latest_newwords"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="LATEST"
                    android:textSize="10sp" >
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_newwords_options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prompt_number_newwords"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="HOW MANY WORDS?" >
                </TextView>

                <Spinner
                    android:id="@+id/select_number_newwords"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:entries="@array/newword_options"
                    android:maxLength="2" >
                </Spinner>

                <Button
                    android:id="@+id/edit_newwords_do_one_table"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="ALL 1 TABLE?"
                    android:textSize="10sp" >
                </Button>                
                <CheckBox
                    android:id="@+id/check_all_same_table"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="1 TABLE?"
                    android:textSize="10sp" >
                </CheckBox>                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_newwords_edit_newwords_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_newwords_get_change_times_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/edit_newwords_get_words"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="GET WORDS?"
                    android:textSize="15sp" >
                </Button>

                <CheckBox
                    android:id="@+id/check_change_review_times"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="CHANGE REVIEW TIMES?"
                    android:textSize="10sp" >
                </CheckBox>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/scroll_edit_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/edit_newwords_review_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>

            <RadioGroup
                android:id="@+id/newwords_edit_choices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/insert_newwords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INSERT" />

                <RadioButton
                    android:id="@+id/edit_newwords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDIT" />

                <RadioButton
                    android:id="@+id/delete_newwords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELETE" />
            </RadioGroup>

            <Button
                android:id="@+id/do_edit_newwords"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="EDIT NEW WORDS" />

            <TextView
                android:id="@+id/newword_results"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </TextView>

            <EditText
                android:id="@+id/input_newwords"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>